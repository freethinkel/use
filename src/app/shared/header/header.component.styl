@import '~assets/colors'
@import '~assets/mixins'

:host 
  display flex
  justify-content center
  height 50px
  background-color $accent
.link 
  width 120px
  font-weight: 500
  letter-spacing: 2px
  color: $primary
  height inherit
  padding-right 20px
  padding-left @padding-right
  margin: 0 10px
  transition();
  &:hover 
    background-color: rgba($primary, 0.1)
  