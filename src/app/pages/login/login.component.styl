@import '~assets/colors'
@import '~assets/mixins'

.form-wrapper
	min-height 100vh
	flex-direction column
	display flex
	justify-content center
	align-items center

form
	padding 20px
	width: 400px
	background-color $primary
	border-radius 10px

.input-field
	& + &
		margin-top 20px
	display flex
	flex-direction column
	label 
		font-family "Google"
		font-size 12px
		color $accent
	input 
		height 36px
		border none 
		font-size 14px
		color $accent
		outline none
		background-color transparent
		border-bottom 2px solid $accent 

.btn-wrapper 
	justify-content flex-end

.submit 
	margin 0
	background-color $accent
	colror $primary
	font-size 14px
	font-weight 800                            

